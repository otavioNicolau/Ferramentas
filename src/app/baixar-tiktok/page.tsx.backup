interface VideoInfo {
  id: string;
  title: string;
  author: string;
  authorAvatar: string;
  thumbnailUrl: string;
  videoUrl: string;
  audioUrl: string;
  duration: number;
  formats: Array<{
    type: string;
    quality: string;
    url: string;
  }>;
  stats: {
    likes: number;
    comments: number;
    shares: number;
    views: number;
  };
}

export default function BaixarTiktokPage() {
